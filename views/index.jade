extends layout

block content
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Вход
                    div.account-wall
                        form(class='form-signin', action='/login', method='POST')
                            input(style={margin: '10px'},type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
                            input(style={margin: '10px'}, type='password', name='password' class='form-control', placeholder='Password', required)
                            button(style={margin: '10px'}, class='btn btn-lg btn-primary btn-block', type='submit') Войти
                            span.clearfix
                    a(href='/signup', class='text-center new-account') Регистрация
                    #message
                    if message
                        h4.text-center.error-message #{message}